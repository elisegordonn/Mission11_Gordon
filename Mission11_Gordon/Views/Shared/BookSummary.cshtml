@{
}
@model Book 

<div class="card m-1 p-1">
    <h4>@Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>Price: $@Model.Price</small></span></h4>
    <h6><i>@Model.Author</i></h6>
    <ul>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>@Model.Category / @Model.Classification</li>
        <li>@Model.PageCount pages</li>
    </ul>
</div>